//FICHEROS LEER LINEAS 
#include<iostream>
#include<fstream>

using namespace std;
int salir;
int main(){
  ifstream fichero("mifichero.txt");
  string mensaje;//para escribir una linea
  
          
          
 getline(fichero,mensaje);//para escribir una linea, de donde lo saco a donde lo meto
  cout<<"la primera linea dice: ";
  cout<<mensaje;
  cin>>salir;
  
  return 0;
}
